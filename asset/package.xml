  <prerequisite type="Query"
                name="Check xTuple ERP version">
    <query>
       SELECT compareVersion(fetchMetricText('ServerVersion'), '4.10.0') >= 0;
    </query>
    <message>
      This version of the Fixed Asset package only works with xTuple ERP
      versions 4.10.0 and greater.
    </message>
  </prerequisite>

  <prerequisite type="Query"
                name="Check Fixed Asset version">
    <query>
       SELECT compareVersion(COALESCE((SELECT pkghead_version from pkghead WHERE pkghead_name = 'asset'),'1.0.0'), '1.8.4') &lt;= 0;
    </query>
    <message>
      A superior version of the Asset package has already been installed in this system.  Please check your package.
    </message>
  </prerequisite>

